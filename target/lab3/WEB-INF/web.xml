<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <display-name>Archetype Created Web Application</display-name>
    <welcome-file-list>
        <welcome-file>view/list_account.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>listAccount</servlet-name>
        <servlet-class>com.lab3.controller.ListAccountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listAccount</servlet-name>
        <url-pattern>/listAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createAccount</servlet-name>
        <servlet-class>com.lab3.controller.CreateAccountController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createAccount</servlet-name>
        <url-pattern>/createAccount</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>withdraw</servlet-name>
        <servlet-class>com.lab3.controller.WithdrawController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>withdraw</servlet-name>
        <url-pattern>/withdraw</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deposit</servlet-name>
        <servlet-class>com.lab3.controller.DepositController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deposit</servlet-name>
        <url-pattern>/deposit</url-pattern>
    </servlet-mapping>
</web-app>
